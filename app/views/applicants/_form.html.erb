<%= form_tag '/applicants', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :manager_id %>
    <%= collection_select(:applicant, :manager_id, Manager.all, :id, :name, prompt: true) %>
    (If Manager is not on the list:
    <a href="/managers/new">Add New Manager</a>)
  </div>
  <div class="form-group">
    <%= label_tag :mentor_id %>
    <%= collection_select(:applicant, :mentor_id, Mentor.all, :id, :name, prompt: true) %>
    (If Mentor is not on the list:
    <a href="/mentors/new">Add New mentor</a>)
  </div>
  <div class="form-group">
    <%= label_tag :unit %>
    <%= text_field_tag :unit, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :alert_date %>
    <%= text_field_tag :alert_date, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :employee_id %>
    <%= text_field_tag :employee_id, "", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :promotion_month %>
    <%= text_field_tag :promotion_month, "", class: 'form-control' %>
  </div>
  <%= submit_tag "Add Applicant", class: "btn btn-primary" %>
<% end %>