<table class="zui-table">
    <thead>
        <tr>
            <% Applicant.attribute_names.each do |attribute|%>
              <th><%=attribute%></th>
            <% end %>
        </tr>
    </thead>
    <tbody>
      <% @applicants.each do |applicant|%>
        <% manager = applicant.manager %>
        <% mentor = applicant.mentor %>
        <tr>
          <% applicant.attributes.each do |attribute|%>
            <td>
              <% if attribute[0] == "name" %>
                <a href="/applicants/<%= applicant.id %>"><%= applicant.name %></a>
              <%elsif attribute[0] == "manager_id"%>
                <a href="/managers/<%= manager.id %>"><%= manager.name %></a>
              <%elsif attribute[0] == "mentor_id"%>
                <a href="/mentors/<%= mentor.id %>"><%= mentor.name %></a>
              <%else%>
                <%=attribute[1]%>  
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
</table>